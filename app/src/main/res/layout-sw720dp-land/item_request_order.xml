<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="data"
            type="app.table.calldisplay.ui.home.model.RequestOrder" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/size_353"
        android:layout_height="match_parent"
        android:layout_marginVertical="@dimen/size_20"
        android:layout_marginStart="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_10"
        app:cardCornerRadius="@dimen/size_20">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvTable"
                bindStateColorTable="@{data.countTotalService}"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@{data.tableDisplay}"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_116"
                android:textStyle="bold"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@id/rlImgService"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="50" />

            <RelativeLayout
                android:id="@+id/rlImgService"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvTable">


                <include
                    android:id="@+id/imgServiceFirstCall"
                    layout="@layout/item_service"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_centerInParent="true"
                    app:data="@{data.firstServiceCall}" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tvCountService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_20"
                android:layout_marginBottom="@dimen/size_20"
                android:gravity="center"
                android:text="@{data.countDisplay}"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_48"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="4" />

            <View
                android:id="@+id/viewDivider"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_2"
                android:background="@color/mercury"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                bindGoneIf="@{!data.lowBattery}"
                android:layout_width="@dimen/size_42"
                android:layout_height="@dimen/size_58"
                android:layout_marginStart="@dimen/size_16"
                android:layout_marginBottom="@dimen/size_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/ic_low_battery" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
